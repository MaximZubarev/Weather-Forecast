<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        <TextView
                android:id="@+id/city"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/temp"
                android:textSize="50sp"
                android:layout_below="@id/city"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/image"
                android:layout_toEndOf="@id/temp"
                android:layout_alignTop="@+id/temp"
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/temp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/white"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maxTemp"
                android:layout_below="@id/description"
                style="@style/DescpTextViewMarginTop"
                android:text="1"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minTemp"
                android:layout_below="@id/description"
                android:text="2"
                android:layout_alignStart="@id/description"
                style="@style/DescpTextViewMarginTop"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sunrise"
                android:layout_below="@id/maxTemp"
                android:text="3"
                style="@style/DescpTextViewMarginTop"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sunset"
                android:layout_below="@id/minTemp"
                android:layout_alignStart="@id/minTemp"
                style="@style/DescpTextViewMarginTop"
                android:text="4"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pressure"
                android:layout_below="@id/sunrise"
                style="@style/DescpTextViewMarginTop"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humidity"
                android:layout_below="@id/sunset"
                android:layout_alignStart="@id/minTemp"
                style="@style/DescpTextViewMarginTop"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind"
                android:layout_below="@id/pressure"
                style="@style/DescpTextViewMarginTop"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cloud"
                android:layout_below="@id/humidity"
                android:layout_alignStart="@id/minTemp"
                style="@style/DescpTextViewMarginTop"
        />

    </RelativeLayout>

</RelativeLayout>