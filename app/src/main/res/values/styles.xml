<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DescpTextView">
        <item name="android:textSize">@dimen/descp_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DescpTextViewMarginTop" parent="DescpTextView">
        <item name="android:layout_marginTop">@dimen/margin30</item>
    </style>

    <style name="DescpTextViewMarginStart" parent="DescpTextView">
        <item name="android:layout_marginStart">@dimen/margin40</item>
    </style>

    <style name="DescpTextViewDays" parent="DescpTextView">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
